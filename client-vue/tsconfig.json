{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["@headlessui/vue", "node"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
